<html>
    <body>
        <h1>Cadastro de livros</h1>

        <form action="/livros" method="post">
            <div if(data.livro.id)>
                <input type="hidden" name="_method" value="PUT" />
                <input type="hidden" id="id" name="id" value="${data.livros.id}" />
            </div>
            <div>
                <label for="titulo">Titulo:</label>
                <input type="text" id="titulo" name="titulo"  "${data.livros.title}" placeholder="coloque o titulo" />
            </div>
            <div>
                <label for="preco">Preço:</label>
                <input type="text" id="preco" name="preco" "${data.livros.price}" placeholder="150.25" />
            </div>
            <div>
                <label for="descricao">Descrição:</label>
                <textarea cols="20" rows="10"  id="descricao" name="descricao"  placeholder="fale sobre o livro">"${data.livros.discription}"</textarea>
            </div>

            <input type="submit" value="Salvar" />
        </form>
    </body>
</html>